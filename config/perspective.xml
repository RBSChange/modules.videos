<?xml version="1.0"?>
<perspective>
	<models>
		<model name="modules_generic/rootfolder">
			<children>
				<child model="modules_videos/video" />
				<child model="modules_videos/youtubevideo" />
				<child model="modules_videos/dailymotionvideo" />
				<child model="modules_generic/folder" />
				<child model="modules_videos/playlist" />
			</children>
			<drops>
				<drop model="modules_videos/video" action="move" />
				<drop model="modules_generic/folder" action="move" />
			</drops>
			<columns>
				<column name="filesize" label="Filesize" flex="2" />
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="openTreeNodeOrder" />
				<contextaction name="createFolder" />
				<groupactions name="create_">
					<contextaction name="createPlaylist" />
					<contextaction name="createVideo" />
					<contextaction name="createDailymotionvideo" />
					<contextaction name="createYoutubevideo" />
				</groupactions>
				<contextaction name="openFolder" />
			</contextactions>
		</model>
		<model name="modules_generic/folder">
			<children>
				<child model="modules_videos/video" />
				<child model="modules_videos/youtubevideo" />
				<child model="modules_videos/dailymotionvideo" />
				<child model="modules_generic/folder" />
				<child model="modules_videos/playlist" />
			</children>
			<drops>
				<drop model="modules_videos/video" action="move" />
				<drop model="modules_generic/folder" action="move" />
			</drops>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="openTreeNodeOrder" />
				<contextaction name="createFolder" />
				<groupactions name="create_">
					<contextaction name="createPlaylist" />
					<contextaction name="createVideo" />
					<contextaction name="createDailymotionvideo" />
					<contextaction name="createYoutubevideo" />
				</groupactions>
				<contextaction name="openFolder" />
			</contextactions>
		</model>
		<model name="modules_videos/video">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="activate" />
				<contextaction name="deactivated" />
				<contextaction name="reactivate" />
			</contextactions>
		</model>
		<model name="modules_videos/playlist">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="activate" />
				<contextaction name="deactivated" />
				<contextaction name="reactivate" />
			</contextactions>
		</model>
		<model name="modules_videos/dailymotionvideo">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="activate" />
				<contextaction name="deactivated" />
				<contextaction name="reactivate" />
			</contextactions>
		</model>
		<model name="modules_videos/youtubevideo">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="activate" />
				<contextaction name="deactivated" />
				<contextaction name="reactivate" />
			</contextactions>
		</model>
	</models>
	<toolbar>
		<toolbarbutton name="edit" />
		<toolbarbutton name="delete" />
		<toolbarbutton name="activate" />
		<toolbarbutton name="deactivated" />
		<toolbarbutton name="reactivate" />
	</toolbar>
	<actions>
		<action name="refresh" single="true" icon="refresh" label="&amp;modules.uixul.bo.actions.Refresh;"/>

		<action name="delete" permission="Delete" icon="delete" label="&amp;modules.uixul.bo.actions.Delete;" />
		<action name="edit" single="true" permission="Load" icon="edit" label="&amp;modules.uixul.bo.actions.Edit;" />
		<action name="activate" permission="Activate" icon="activate" label="&amp;modules.uixul.bo.actions.Activate;" />
		<action name="deactivated" permission="Deactivated" icon="deactivated" label="&amp;modules.uixul.bo.actions.Deactivate;" />
		<action name="reactivate" permission="ReActivate" icon="reactivate" label="&amp;modules.uixul.bo.actions.ReActivate;" />
		<action name="createFolder" single="true" icon="create-folder" label="&amp;modules.uixul.bo.actions.Create-folder;" />
		<action name="openTreeNodeOrder" single="true" permission="Order" icon="sort" label="&amp;modules.uixul.bo.actions.Set-children-order;" />
		<action name="create_" actions="createPlaylist,createVideo,createDailymotionvideo,createYoutubevideo" icon="add" />
		<action name="createPlaylist" group="create_" permission="Insert_playlist" label="&amp;modules.videos.bo.actions.Create-Playlist;" />
		<action name="createVideo" group="create_" permission="Insert_video" icon="add" label="&amp;modules.videos.bo.actions.Create-Video;" />
		<action name="createDailymotionvideo" group="create_" permission="Insert_dailymotionvideo" label="&amp;modules.videos.bo.actions.Create-Dailymotionvideo;" />
		<action name="createYoutubevideo" group="create_" permission="Insert_youtubevideo" label="&amp;modules.videos.bo.actions.Create-Youtubevideo;" />
		<action name="move" permission="Move" icon="up_down" label="&amp;modules.uixul.bo.actions.Move;" />
		<action name="openFolder" icon="open-folder" label="&amp;modules.uixul.bo.actions.OpenFolder;" />
	</actions>
</perspective>